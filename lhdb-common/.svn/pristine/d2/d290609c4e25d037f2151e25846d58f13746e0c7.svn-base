	<select id="getModulePermission" parameterType="java.lang.Integer" resultMap="modulePermissionMap">
	<!--  
	select DISTINCT A.ModuleID,A.ParentID,A.Title,A.Link,A.OrderNo,A.Nullity,A.IsMenu,A.Description,B.* FROM 
	(select * from Module where parentid = 0) as A
LEFT JOIN (
		select m.ModuleID as c_moduleid,m.ParentID as c_parentid,m.Title as c_title,m.Link as c_link,
		m.OrderNo as c_orderno,m.Nullity as c_nullity,m.IsMenu as c_ismenu,m.Description as c_desc,
		mp.ModuleID as mp_moduleid,mp.Nullity as mp_nullity,mp.PermissionTitle as mp_title,mp.PermissionValue as mp_value,-9999 as mp_parentid,rp.ManagerPermission as mp_code
		  from  Module m,  ModulePermission mp ,RolePermission rp where rp.RoleID=#{roleid,jdbcType=INTEGER} and m.ParentID>0 and m.ModuleID=rp.ModuleID and m.ModuleID=mp.ModuleID
) B
 on B.c_parentid =A.ModuleID ORDER BY A.OrderNo
 -->
	select DISTINCT A.ModuleID,A.ParentID,A.Title,A.Link,A.OrderNo,A.Nullity,A.IsMenu,A.Description,B.*
	FROM (select * from Module where parentid = 0) as A
	LEFT JOIN (
		select * from(
			select m.ModuleID as c_moduleid,m.ParentID as c_parentid,m.Title as c_title,m.Link as c_link,
			m.OrderNo as c_orderno,m.Nullity as c_nullity,m.IsMenu as c_ismenu,m.Description as c_desc,
			mp.ModuleID as mp_moduleid,mp.Nullity as mp_nullity,mp.PermissionTitle as mp_title,
			mp.PermissionValue as mp_value,-9999 as mp_parentid
			from Module m,ModulePermission mp 
			where m.ParentID>0 and m.ModuleID=mp.ModuleID
	) A LEFT JOIN (
		select <if test="#{_parameter}!=null">RoleId</if>,ModuleID as rp_moduleid,OperationPermission as mp_code 
		from RolePermission 
	) as rp on <if test="#{_parameter}!=null">rp.RoleID=#{_parameter}</if> and rp.rp_moduleid=a.c_moduleid
	) B on B.c_parentid =A.ModuleID ORDER BY A.OrderNo
	</select>
